<Page x:Class="CustomerServiceUI.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerServiceUI"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300" FontSize="14">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Login" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Agent Name"/>
            <TextBox Name="txtAgentName" FontSize="18"/>
            <Label Content="Password"/>
            <PasswordBox Name="txtPassword" FontSize="18"/>
            <Button Name="btnSubmit" Click="btnSubmit_Click" Content="Submit" Margin="60 10" FontSize="18"/>
        </StackPanel>
    </Grid>
</Page>
